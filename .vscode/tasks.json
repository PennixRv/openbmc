{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Initialize Environment",
            "type": "shell",
            "command": ". setup ast2600-default",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "BitBake Parse",
            "type": "shell",
            "command": ". ${workspaceFolder}/setup ast2600-default && bitbake -p",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build obmc-phosphor-image",
            "type": "shell",
            "command": ". ${workspaceFolder}/setup ast2600-default && bitbake obmc-phosphor-image",
            "problemMatcher": [],
            "dependsOn": "Initialize Environment",
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/poky/bitbake/bin:${env:PATH}"
                }
            }
        }
    ]
}
